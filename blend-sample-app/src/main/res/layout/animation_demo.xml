<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/demoCircle"
      android:layout_height="108dp"
      android:layout_width="108dp"
      android:layout_marginBottom="@dimen/normalPadding"
      android:elevation="0dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/demoCircle2"
      app:layout_constraintBottom_toTopOf="@id/label"
      app:cardCornerRadius="108dp"
      app:cardBackgroundColor="@color/colorPrimary_60"
      app:strokeColor="@color/colorPrimary"
      app:strokeWidth="5dp"
      tools:ignore="UselessParent"
      />

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/demoCircle2"
      android:layout_height="108dp"
      android:layout_width="108dp"
      android:layout_marginBottom="@dimen/normalPadding"
      android:layout_gravity="center_horizontal|bottom"
      android:elevation="0dp"
      app:layout_constraintLeft_toRightOf="@+id/demoCircle"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/label"
      app:cardCornerRadius="108dp"
      app:cardBackgroundColor="@color/colorPrimary_60"
      app:strokeColor="@color/colorPrimary"
      app:strokeWidth="5dp"
      tools:ignore="UselessParent"
      />

  <TextView
      android:id="@+id/label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/normalPadding"
      app:layout_constraintLeft_toLeftOf="@id/demoCircle"
      app:layout_constraintRight_toRightOf="@id/demoCircle"
      app:layout_constraintBottom_toBottomOf="parent"
      android:text="@string/with_blend"
      />

  <TextView
      android:id="@+id/label2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/normalPadding"
      app:layout_constraintLeft_toLeftOf="@id/demoCircle2"
      app:layout_constraintRight_toRightOf="@id/demoCircle2"
      app:layout_constraintBottom_toBottomOf="parent"
      android:text="@string/without_blend"
      />

</androidx.constraintlayout.widget.ConstraintLayout>